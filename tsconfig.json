{
    "typeRoots": [
        "./node_modules/@types",
        "./@types"
    ],
    "compilerOptions": {
        "lib": [
            "dom",
            "dom.iterable",
            "esnext"
        ],
        "skipLibCheck": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "outDir": "./dist/",
        "sourceMap": true,
        "noImplicitAny": false,
        "module": "esnext",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "target": "es2020",
        "jsx": "react",
        "allowJs": true
    },
    "include": [
        "client/**/*.(ts|tsx)",
        "server/**/*.(ts|tsx)"
    ],
    "exclude": [
        "node_modules"
    ]
}